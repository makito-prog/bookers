<div class="frame">
  
  <h1 class="title">Books</h1>
  <table>
    <thead>
      <tr>
        <th class="table-title">Title</th>
        <th class="table-body">Body</th>
      </tr>
    </thead>
    <% @books.each do |book| %>
      <tbody>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book.id), class: "link-tag" %></td>
        <td><%= link_to 'Edit', edit_book_path(book.id), class: "link-tag" %></td>
        <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?", class: "link-tag" %></td>
      </tbody>
    <% end %>
  </table>
  <!--newbook-->
  <div class="create-area">
    <% if @book && @book.errors.any? %> 
      <%= @book.errors.count %> errors prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |e| %>
          <li><%= e %></li>
        <% end %>
      </ul>
    <% end %>
    
    <h3>New Book</h3>
    <%= form_with model: Book.new do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
    	
      <h4>Body</h4>
      <%= f.text_area :body %>
    	<div><%= f.submit 'Create Book' %></div>
      
    <% end %>
  </div>
</div>
