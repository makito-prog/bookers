<div class="frame">
  <h1 class="title">Editing Book</h1>
  
  <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |e| %>
        <li><%= e %></li>
      <% end %>
    </ul>
  <% end %>
  
  <%= form_with model: @book, local: true do |f| %>
    <h4 class="edit-content">Title</h4>
    <%= f.text_field :title %>
    <h4 class="edit-content">Body</h4>
    <%= f.text_area :body %>
    <div class="update-button">
      <%= f.submit 'Update Book' %>
    </div>
    
    <%= link_to 'Show', book_path(@book.id) %>
    <span>|</span>
    <%= link_to 'Back', books_path %>
    
  <% end %>
  
</div>
